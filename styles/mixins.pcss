@mixin desktopHd() {
  @media screen and (max-width: 1800px) {
    @content;
  }
}

@mixin desktop() {
  @media screen and (max-width: 1200px) {
    @content;
  }
}

@mixin tablets() {
  @media screen and (max-width: 768px) {
    @content;
  }
}

@mixin big-phones() {
  @media screen and (max-width: 640px) {
    @content;
  }
  
}
@mixin phones() {
  @media screen and (max-width: 480px) {
    @content;
  }
}