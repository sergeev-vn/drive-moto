.search-tabs__tabs {
  display: flex;
  margin-bottom: 25px;
}

.search-tabs__tabs-item_active {
  .search-tabs__tabs-link {
    background: $gray;
    border-radius: 5px;
  }
}

.search-tabs__tabs-link {
  display: block;
  font-size: 20px;
  line-height: 24px;
  padding: 11px 26px;
}

.search-tabs__content-item {
  display: none;

  &_active {
    display: block;
  }
}