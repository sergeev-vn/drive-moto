.filter-dropdown__title {
  display: inline-block;
  cursor: pointer;
  position: relative;

  &::before {
    content: svg-load('../../images/icons/arrow-drop.svg', fill=$light-gray);
    position: absolute;
    width: 12px;
    height: 7.4px;
    left: 0;
  }

  &_active {
    &::before {
      transform: rotate(180deg);
      bottom: 0;
    }
  }
}

.filter-dropdown__content {
  display: flex;
  margin-top: 20px;

  &_radio {
    .filter-dropdown__content-item {
      flex-basis: initial;
      margin-right: 24px;
      white-space: nowrap;
    }
  }
}

.filter-dropdown__content-item {
  flex-basis: 50%;
  margin-right: 10px;
  white-space: nowrap;

  &:last-child {
    margin-right: 0;
  }
}

.filter-dropdown__label {
  display: inline-block;
  cursor: pointer;
}

.filter-dropdown__label-title {
  display: inline;
  font-size: 14px;
  margin-left: 12px;
}

.filter-dropdown__checkbox {
  vertical-align: middle;
  width: 14px;
  height: 14px;
  border: 1px solid $light-gray;
  background: transparent;
  margin: 0;
  box-shadow: none;
  position: relative;
  border-radius: 2px;
  transition: $speed;

  &.checked {
    background-color: $blue;
    border: none;
    border-radius: 0;

    .jq-checkbox__div {
      border-color: $secondary;
      margin: 0;
      border-width: 2px;
      position: absolute;
      top: 40%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(-50deg);
    }
  }
}

.filter-dropdown__radio {
  margin: 0;
  vertical-align: middle;
  box-shadow: none;
  background: transparent;
  width: 14px;
  height: 14px;
  border: 1px solid $light-gray;
  border-radius: 2px;
  transition: $speed;
  
  &.checked {
    background-color: $blue;
    border: none;
    border-radius: 2px;

    .jq-radio__div {
      background-color: $blue;
      border: none;
      border-radius: 2px;
      margin: 0;
      width: 100%;
      height: 100%;
      box-shadow: none;
    }
  }

  &.focused {
    border: none;
  }
}