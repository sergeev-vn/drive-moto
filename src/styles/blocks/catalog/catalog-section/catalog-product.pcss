.catalog-product {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  
  @include w1176 {
    justify-content: space-around;
  }

  &_list-active {
    .product-item {
      min-width: 100%;
    }

    .catalog-product__item {
      width: 100%;
      margin-right: 0;
    }
  }
}

.catalog-product__item {
  margin-right: 0.5%;
  margin-bottom: 30px;

  &:last-child {
    margin-right: 0;
  }

  @include tablets {
    margin-right: 0;
  }
}